{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2017",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "pretty": false,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}